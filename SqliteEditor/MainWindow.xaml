<Window
    x:Class="SqliteEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SqliteEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SqliteEditor.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    Closed="Window_Closed"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--<TextBox Text="{Binding DatabasePath.Path.Value}" />-->
        <ContentPresenter Content="{Binding DatabasePath}" />
        <DataGrid Grid.Row="1" ItemsSource="{Binding DataTable.Value}" />
    </Grid>
</Window>
