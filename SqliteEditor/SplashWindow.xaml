<Window x:Class="SqliteEditor.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashWindow" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Width="600" Height="300" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <!-- Stylish dark gradient background -->
        <Border CornerRadius="12" Padding="0" >
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF071022" Offset="0" />
                    <GradientStop Color="#FF0B2A3A" Offset="0.5" />
                    <GradientStop Color="#FF072B3F" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Simple line-art database icon -->
                <Viewbox Width="120" Height="120">
                    <Canvas Width="100" Height="100">
                        <Path Stroke="#63E6FF" StrokeThickness="2" Fill="Transparent" Data="M10,18 C10,10 40,6 50,6 C60,6 90,10 90,18 C90,26 60,30 50,30 C40,30 10,26 10,18 Z" />
                        <Path Stroke="#63E6FF" StrokeThickness="2" Fill="#071022" Data="M10,18 L10,62 C10,70 40,74 50,74 C60,74 90,70 90,62 L90,18" />
                        <Path Stroke="#63E6FF" StrokeThickness="2" Fill="Transparent" Data="M10,36 C30,42 70,42 90,36" />
                        <Path Stroke="#63E6FF" StrokeThickness="2" Fill="Transparent" Data="M10,52 C30,58 70,58 90,52" />
                    </Canvas>
                </Viewbox>

                <StackPanel Grid.Column="1" Margin="18,6,6,6" VerticalAlignment="Center">
                    <TextBlock Text="SqliteEditor" Foreground="White" FontSize="36" FontWeight="Bold" FontFamily="Segoe UI" />
                    <TextBlock Text="Lightweight SQLite DB viewer &amp; editor" Foreground="#99FFFFFF" FontSize="14" Margin="0,6,0,0" />

                    <Grid Margin="0,12,0,0">
                        <Rectangle Height="6" RadiusX="3" RadiusY="3" Fill="#0F63E6FF" Opacity="0.12" />
                        <Rectangle Name="ProgressBar" Height="6" RadiusX="3" RadiusY="3" Fill="#63E6FF" Width="120" />
                    </Grid>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>